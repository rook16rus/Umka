<header class="header">
    <div class="container">
        <div class="header__inner">
            <div class="header__logo">
                {{> logo }}
            </div>
            <button class="header__burger">
                <svg>
                    <use xlink:href="#burger-icon"></use>
                </svg>
                <span>Меню сайта</span>
            </button>
            <nav class="header__nav">
                <ul class="header__menu">
                    {{#each menu }}
                        <li>
                            <a href="#" class="header__menu-item">{{this}}</a>
                        </li>
                    {{/each}}
                </ul>
            </nav>
            <button class="header__button button-ellipse">Оставить заявку</button>
        </div>
    </div>
    {{> menu-burger }}
</header>